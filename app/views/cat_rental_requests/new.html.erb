

<form action="/cat_rental_requests" method="post">

<div>
  <label for cat_rental_request[cat_id]>Rent-a-Cat:</label>
  <select name=cat_rental_request[cat_id]>
  <option ></option>
  <% @cats.each do |cat| %>
    <option value =<%= cat.id %>><%=cat.name %></option>

  <% end %>
</select>
</div>

<div>
  <label for cat_rental_request[start_date]>Check-out:</label>
  <input type= "date" name = cat_rental_request[start_date] />
</div>

<div>
  <label for cat_rental_request[end_date]>Check-in:</label>
  <input type= "date" name = cat_rental_request[end_date] />
</div>

<button type="submit">Submit</button>

</form>
