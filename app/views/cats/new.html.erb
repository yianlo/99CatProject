<form action = "/cats" method = "post">
  <div>
    <label for cat[name]>Name:</label>
    <input type = "text" name = cat[name] />
  </div>

  <div>
    <label for cat[birth_date]>Birth Date:</label>
    <input type= "date" name = cat[birth_date] />
  </div>

  <div>
    <label for cat[sex]>Sex:</label>
    <input type="radio" name = cat[sex] value = "M"> Male
    <input type="radio" name = cat[sex] value = "F"> Female
  </div>

  <div>
    <label for cat[color]>Color:</label>
    <select name=cat[color]>
      <option ></option>
      <option value="red">Red</option>
      <option value="blue">Blue</option>
      <option value="orange">Orange</option>
      <option value="white">White</option>
      <option value="black">Black</option>
    </select>
  </div>

  <div>
    <label for cat[description]>Description:</label><br/>
    <textarea name = cat[description]></textarea>
  </div>

  <button type="submit">Submit</button>

</form>
